# Konfiguracja InFakt (dodaj do swojego .env)

# InFakt API Settings
INFAKT_ENVIRONMENT=sandbox
# INFAKT_ENVIRONMENT=production

# Klucze API z panelu InFakt (https://app.infakt.pl/app/api)
INFAKT_API_KEY=your_api_key_here
INFAKT_COMPANY_ID=your_company_id_here

# Automatyczne operacje
INFAKT_AUTO_SEND_EMAIL=true
INFAKT_AUTO_MARK_PAID=true

# Webhook secret (opcjonalny dla bezpiecze≈Ñstwa)
INFAKT_WEBHOOK_SECRET=your_webhook_secret

# Prefiks faktur
INFAKT_INVOICE_PREFIX=PETHELP

# Debug i logi
INFAKT_LOG_REQUESTS=true
INFAKT_DEBUG=false